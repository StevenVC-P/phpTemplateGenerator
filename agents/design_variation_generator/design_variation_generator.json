  "randomization_rules": {
    "ensure_contrast": true,
    "maintain_accessibility": true,
    "brand_consistency": true,
    "avoid_combinations": [
      "red_primary_with_green_secondary",
      "yellow_background_with_white_text",
      "purple_with_brown_accents"
    ]
  },
