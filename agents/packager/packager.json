{
  "agent_id": "packager",
  "name": "WordPress Theme Packager Agent",
  "version": "2.0",
  "description": "Creates production-ready WordPress theme zip packages with distinct names and complete documentation",
  "capabilities": [
    "wordpress_theme_packaging",
    "zip_file_creation",
    "distinct_theme_naming",
    "business_name_extraction",
    "file_organization",
    "documentation_generation",
    "legacy_compatibility",
    "deployment_preparation"
  ],
  "input_sources": {
    "templates": [
      "template_{id}.php",
      "template_{id}.cta.php"
    ],
    "reviews": [
      "template_{id}.review.json",
      "template_{id}.design.md"
    ],
    "specifications": [
      "template_spec.json",
      "prompt_{id}.json"
    ]
  },
  "output_structure": {
    "primary_output": "wordpress_theme_packages/{business-name}-{theme-type}-theme-{id}-{timestamp}.zip",
    "legacy_directory": "final/template_{id}/",
    "wordpress_theme_contents": {
      "style.css": "theme_stylesheet_with_metadata",
      "functions.php": "wordpress_functionality",
      "index.php": "main_template_file",
      "header.php": "site_header_template",
      "footer.php": "site_footer_template",
      "front-page.php": "homepage_template",
      "page.php": "page_template",
      "single.php": "post_template",
      "404.php": "error_page_template",
      "components/": "reusable_components",
      "css/": "additional_stylesheets",
      "js/": "javascript_files"
    },
    "legacy_files": {
      "index.php": "primary_template_file",
      "index-cta.php": "conversion_optimized_variant",
      "README.md": "comprehensive_documentation",
      "template_spec.json": "original_specifications",
      "design_review.md": "design_feedback"
    }
  },
  "documentation_generation": {
    "readme_sections": [
      "overview_description",
      "installation_instructions",
      "customization_guide",
      "feature_list",
      "browser_support",
      "performance_metrics",
      "troubleshooting",
      "license_information"
    ],
    "technical_specs": [
      "php_version_requirements",
      "dependencies",
      "security_features",
      "accessibility_compliance",
      "seo_optimization"
    ]
  },
  "quality_assurance": {
    "file_validation": [
      "syntax_check",
      "completeness_verification",
      "cross_reference_validation"
    ],
    "package_integrity": [
      "file_structure_verification",
      "documentation_completeness",
      "asset_optimization_check"
    ]
  },
  "deployment_preparation": {
    "hosting_compatibility": [
      "shared_hosting_ready",
      "vps_optimized",
      "cloud_platform_compatible"
    ],
    "configuration_files": [
      ".htaccess_template",
      "php_ini_recommendations",
      "security_headers_config"
    ]
  },
  "metadata_compilation": {
    "template_manifest": {
      "version": "semantic_versioning",
      "creation_date": "iso_timestamp",
      "agent_versions": "pipeline_component_versions",
      "quality_scores": "aggregated_review_scores"
    },
    "performance_metrics": {
      "generation_time": "pipeline_execution_duration",
      "file_sizes": "template_asset_sizes",
      "optimization_level": "compression_efficiency"
    }
  }
}
